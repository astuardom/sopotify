* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Jarama Color Palette */
    --primary-start: #6C3CE6;
    --primary-end: #A855F7;
    --secondary-start: #06B6D4;
    --secondary-end: #14B8A6;
    --accent-start: #F97316;
    --accent-end: #F43F5E;

    /* Gradients */
    --gradient-primary: linear-gradient(135deg, var(--primary-start), var(--primary-end));
    --gradient-secondary: linear-gradient(135deg, var(--secondary-start), var(--secondary-end));
    --gradient-accent: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    --gradient-bg: linear-gradient(180deg, #0A0A0F 0%, #1A0F2E 100%);

    /* Glassmorphism */
    --glass-bg: rgba(255, 255, 255, 0.05);
    --glass-border: rgba(255, 255, 255, 0.1);
    --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);

    /* Text Colors */
    --text-primary: #FFFFFF;
    --text-secondary: rgba(255, 255, 255, 0.7);
    --text-subdued: rgba(255, 255, 255, 0.5);

    /* Backgrounds */
    --bg-dark: #0A0A0F;
    --bg-card: rgba(20, 15, 35, 0.6);
    --bg-hover: rgba(255, 255, 255, 0.1);
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--gradient-bg);
    color: var(--text-primary);
    overflow: hidden;
    animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.app-container {
    display: grid;
    grid-template-columns: 280px 1fr 320px;
    grid-template-rows: 1fr auto;
    height: 100vh;
    gap: 12px;
    padding: 12px;
}

/* Glassmorphic Card Base */
.glass-card {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    box-shadow: var(--glass-shadow);
}

/* Sidebar */
.sidebar {
    grid-column: 1;
    grid-row: 1 / 3;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.nav-header {
    background: var(--gradient-primary);
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 8px 24px rgba(108, 60, 230, 0.3);
}

.logo {
    font-size: 28px;
    font-weight: 900;
    letter-spacing: -0.5px;
    display: flex;
    align-items: center;
    gap: 12px;
    color: white;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

.logo i {
    font-size: 32px;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }
}

.library-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
    min-height: 0;
}

.library-header {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.lib-btn {
    background: transparent;
    border: none;
    color: var(--text-primary);
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.lib-btn:hover {
    color: var(--primary-end);
    transform: translateX(4px);
}

.action-btn {
    background: var(--gradient-accent);
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
}

.action-btn:hover {
    transform: scale(1.1) rotate(90deg);
}

.library-filters {
    display: flex;
    gap: 8px;
    padding: 12px;
}

.chip {
    padding: 8px 16px;
    border-radius: 20px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    color: var(--text-secondary);
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.chip:hover {
    background: var(--bg-hover);
    transform: translateY(-2px);
}

.chip.active {
    background: var(--gradient-primary);
    color: white;
    border-color: transparent;
    box-shadow: 0 4px 12px rgba(108, 60, 230, 0.4);
}

.library-list {
    list-style: none;
    padding: 0 8px;
    overflow-y: auto;
    flex: 1;
    min-height: 0;
}

.library-list::-webkit-scrollbar {
    width: 8px;
}

.library-list::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
}

.library-list::-webkit-scrollbar-thumb {
    background: var(--gradient-primary);
    border-radius: 4px;
}

.library-item {
    display: flex;
    gap: 12px;
    padding: 12px;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 4px;
}

.library-item:hover {
    background: var(--bg-hover);
    transform: translateX(4px);
}

.library-item.active {
    background: var(--gradient-secondary);
    box-shadow: 0 4px 16px rgba(6, 182, 212, 0.3);
}

.lib-img {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    background: var(--gradient-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    flex-shrink: 0;
}

.lib-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-width: 0;
}

.lib-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.lib-desc {
    font-size: 12px;
    color: var(--text-subdued);
}

/* Main Content */
.main-content {
    grid-column: 2;
    grid-row: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
    overflow: hidden;
}

.top-bar {
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    padding: 16px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--glass-shadow);
}

.nav-arrows {
    display: flex;
    gap: 8px;
}

.arrow-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    color: var(--text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.arrow-btn:hover {
    background: var(--gradient-primary);
    transform: scale(1.1);
}

.search-bar-container {
    flex: 1;
    max-width: 600px;
    margin: 0 24px;
}

.input-group {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 24px;
    padding: 0 20px;
    transition: all 0.3s ease;
}

.input-group:focus-within {
    border-color: var(--primary-end);
    box-shadow: 0 0 0 3px rgba(168, 85, 247, 0.2);
}

.input-group i {
    color: var(--text-subdued);
    font-size: 16px;
}

.input-group input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--text-primary);
    font-size: 14px;
    padding: 12px 0;
    outline: none;
}

.input-group input::placeholder {
    color: var(--text-subdued);
}

.input-group button {
    background: var(--gradient-primary);
    border: none;
    color: white;
    padding: 10px 24px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 13px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(108, 60, 230, 0.4);
}

.input-group button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(108, 60, 230, 0.5);
}

.user-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--gradient-accent);
    border: 2px solid var(--glass-border);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    position: relative;
}

.content-scroll::-webkit-scrollbar {
    width: 10px;
}

.content-scroll::-webkit-scrollbar-track {
    background: transparent;
}

.content-scroll::-webkit-scrollbar-thumb {
    background: var(--gradient-primary);
    border-radius: 5px;
}

.playlist-header {
    background: var(--gradient-primary);
    padding: 40px;
    display: flex;
    gap: 24px;
    align-items: flex-end;
    position: relative;
    overflow: hidden;
}

